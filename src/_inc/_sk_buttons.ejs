<% const sk_buttons = [
    ["W攻撃", "W攻撃"],
    ["バフのみ", "バフのみ"],

    ["👥MP回復", "MP回復"],
    ["👥攻撃⬆", "物理攻撃UP,魔法攻撃UP"],
    ["👥クリ⬆", "物理クリティカルUP,魔法クリティカルUP"],
    ["👥速度⬆", "行動速度UP"],
    ["👥速度⬆Aのみ", "行動速度UP_A"],
    ["👥速度⬆Bのみ", "行動速度UP_B"],
    ["👥スキルダメ⬆", "スキルダメージUP"],
    ["👥奥義ダメ⬆", "奥義ダメージUP"],
    ["👥属性攻撃⬆", "属性攻撃UP"],
    ["👥回数付ダメ⬆", "回数付ダメージUP,回数付物理ダメージUP,回数付魔法ダメージUP"],
    ["👥ダメ⬆", "ダメージUP"],
    ["👥デバフ耐性", "デバフ耐性"],

    ["👤MP回復", "自身MP回復"],
    ["👤攻撃⬆", "自身物理攻撃UP,自身魔法攻撃UP"],
    ["👤クリ⬆", "自身物理クリティカルUP,自身魔法クリティカルUP"],
    ["👤速度⬆", "自身行動速度UP"],
    ["👤速度⬆Aのみ", "自身行動速度UP_A"],
    ["👤速度⬆Bのみ", "自身行動速度UP_B"],
    ["👤スキルダメ⬆", "自身スキルダメージUP"],
    ["👤奥義ダメ⬆", "自身奥義ダメージUP"],
    ["👤属性攻撃⬆", "自身属性攻撃UP"],
    ["👤回数付ダメ⬆", "自身回数付ダメージUP,自身回数付物理ダメージUP,自身回数付魔法ダメージUP"],
    ["👤ダメ⬆", "自身ダメージUP,自身条件付ダメージUP"],
    ["👤デバフ耐性", "自身デバフ耐性"],
    ["👤挑発耐性", "挑発耐性"],

    ["👹挑発", "挑発"],
    ["👹防御⬇", "物理防御DOWN,魔法防御DOWN"],
    ["👹速度⬇", "行動速度DOWN"],
    ["👹被ダメ⬆", "被ダメージUP"],
    ["👹状態付与", "毒,火傷,凍結,出血,沈黙,解消,麻痺,睡眠,石化,眩暈,混乱,魅了,呪い,盲目,恐怖,解消"],
    ["👹速度⬇Aのみ", "行動速度DOWN_A"],
    ["👹速度⬇Bのみ", "行動速度DOWN_B"],
];
%>

<ul class="filter_container" data-filter="sk_type" data-count="<%= sk_buttons.length %>">
    <div class="target-container target-cell" id="sk-target-container">
        <span class="target-label">対象:</span>
        <div class="target-selector">
            <button class="target-button" data-range="self">👤自身</button>
            <button class="target-button active" data-range="all">👥味方</button>
            <button class="target-button" data-range="enemy">👹敵</button>
        </div>
    </div>
    <% for (const button of sk_buttons) {
        const val = button[1].split(",").map(x => def[x]).join(",");
        let range = "";
        let initStyle = "";
        if (button[0].includes("👤")) {
            range = 'self';
            initStyle = "style='display: none;'"
        } else if (button[0].includes("👥")) {
            range = 'all';
        } else if (button[0].includes("👹")) {
            range = 'enemy';
            initStyle = "style='display: none;'"
        }

        const name = button[0].replace(/👤|👥|👹/g, '');

        const label = button[0]
        .replace(/⬆/g, '<span class="arrow-mark up">⬆</span>')
        .replace(/⬇/g, '<span class="arrow-mark down">⬇</span>');
    %>
        <% if (range !== "") { %>
        <li data-range="<%= range %>" data-name="<%= name %>" data-val="<%= val %>" data-check="0" <%- initStyle %>><div><%- label %></div></li>
        <% } else { %>
        <li data-val="<%= val %>" data-check="0"><div><%- label %></div></li>
        <% } %>
    <% } %>
</ul>